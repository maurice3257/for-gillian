    <script>
        function checkPassword() {
            const pass = document.getElementById('passInput').value;
            const correctPass = "maurisgilli"; // Password sudah diganti
            const errorMsg = document.getElementById('error-msg');
            const slide1 = document.getElementById('slide-satu');
            const slide2 = document.getElementById('slide-dua');

            if (pass === correctPass) {
                slide1.style.display = 'none';
                slide2.style.display = 'block';
            } else {
                errorMsg.style.display = 'block';
                // Efek goyang dikit kalau salah
                const inputField = document.getElementById('passInput');
                inputField.style.borderColor = '#ff8a80';
                inputField.classList.add('shake');
                setTimeout(() => inputField.classList.remove('shake'), 500);
            }
        }
    </script>
